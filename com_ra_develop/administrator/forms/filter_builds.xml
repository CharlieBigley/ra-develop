<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_RA_DEVELOP_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_RA_DEVELOP_FILTER_STATE"
               description="COM_RA_DEVELOP_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_RA_DEVELOP_LIST_FULL_ORDERING"
               description="COM_RA_DEVELOP_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_RA_DEVELOP_ID_ASC</option><option value="a.id DESC">COM_RA_DEVELOP_ID_DESC</option><option value="a.build_date ASC">COM_RA_DEVELOP_BUILD_DATE_ASC</option><option value="a.build_date DESC">COM_RA_DEVELOP_BUILD_DATE_DESC</option><option value="a.environment ASC">COM_RA_DEVELOP_ENVIRONMENT_ASC</option><option value="a.environment DESC">COM_RA_DEVELOP_ENVIRONMENT_DESC</option><option value="a.component_id ASC">COM_RA_DEVELOP_COMPONENT_ID_ASC</option><option value="a.component_id DESC">COM_RA_DEVELOP_COMPONENT_ID_DESC</option><option value="a.version ASC">COM_RA_DEVELOP_VERSION_ASC</option><option value="a.version DESC">COM_RA_DEVELOP_VERSION_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_RA_DEVELOP_LIST_LIMIT"
               description="COM_RA_DEVELOP_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>